[user]
	name = Salimane Adjao Moustapha
	email = me@salimane.com

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = nano
	excludesfile = ~/.gitignore

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files

[apply]
  whitespace = strip

[diff]
  rename = copy

[branch]
	autosetupmerge = true

[branch "master"]
  rebase = true

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[merge]
	tool = meld

[github]
	user = salimane
[push]
        default = upstream
